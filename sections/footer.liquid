{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "select",
      "id": "footer_layout",
      "label": "Choose Footer Layout",
      "options": [
        {
          "value": "layout_1",
          "label": "Footer Layout 1"
        },
        {
          "value": "layout_2",
          "label": "Footer Layout 2"
        }
      ],
      "default": "layout_1"
    }
  ],
  "presets": [
    {
      "name": "Custom Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}

{% if section.settings.footer_layout == 'layout_1' %}
  <!-- Footer Layout 1 -->
  <footer class="footer-layout-1">
    <div>
      <h4>Layout 1: Quick Links</h4>
      <ul>
        <li><a href="/collections/all">Shop All</a></li>
        <li><a href="/pages/about-us">About Us</a></li>
        <li><a href="/pages/contact">Contact</a></li>
      </ul>
    </div>
  </footer>
{% elsif section.settings.footer_layout == 'layout_2' %}
  <!-- Footer Layout 2 -->
  <footer class="footer-layout-2">
    <div>
      <h4>Layout 2: Newsletter + Social</h4>
      <form action="/contact#footer-newsletter" method="post">
        <input type="email" placeholder="Your email" name="contact[email]" required>
        <button type="submit">Subscribe</button>
      </form>
      <div>
        <a href="https://instagram.com" target="_blank">Instagram</a>
        <a href="https://facebook.com" target="_blank">Facebook</a>
      </div>
    </div>
  </footer>
{% endif %}
