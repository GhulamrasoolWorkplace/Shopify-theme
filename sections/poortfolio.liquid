{% assign portfolio_items = shop.metaobjects.portfolio[settings.portfolio_selector].values %}

<section>
  <h2>My Portfolio</h2>
  <div class="portfolio-grid">
    {% for item in portfolio_items %}
      <div class="portfolio-card">
        <img src="{{ item.featured_image | file_url }}" alt="{{ item.title.value }}" width="100%" height="100%">
        <h3>{{ item.title.value }}</h3>
        <p>Client: {{ item.clint_name.value }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Portfolio Section",
  "settings": [
    {
      "type": "metaobject_list",
      "label": "Select Portfolio",
      "id": "portfolio_selector",
      "metaobject_type": "portfolio"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}