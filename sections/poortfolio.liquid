{% assign portfolio_items = shop.metaobjects.portfolio.values %}

<section>
  <h2>My Portfolio</h2>
  <div class="portfolio-grid">
    {% for item in portfolio_items %}
      <div class="portfolio-card">
        <img src="{{ item.image | image_url: 'medium' }}" alt="{{ item.title.value }}" />
        <h3>{{ item.title.value }}</h3>
        <p>Client: {{ item.Clint_name.value }}</p>
      </div>
    {% endfor %}
  </div>
</section>
