<section>
  <h2>My Portfolio</h2>
  <div class="portfolio-grid">
    {% for portfolio_list in section.settings.portfolio_selector %}
      <div class="portfolio-card">
        <img src="{{ portfolio_list.featured_image | file_url }}" alt="{{ portfolio.title.value }}" width="100%" height="100%">
        <h3>{{ portfolio_list.title.value }}</h3>
        <p>Client: {{ portfolio_list.clint_name.value }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Portfolio Section",
  "settings": [
    {
      "type": "metaobject_list",
      "label": "Select Portfolio Items",
      "id": "portfolio_selector",
      "metaobject_type": "portfolio_list"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
