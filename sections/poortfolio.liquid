<section>
  <h2>My Portfolio</h2>
  <div class="portfolio-grid">
    {% for item in settings.portfolio_selector %}
      {% assign portfolio = item %}
      <div class="portfolio-card">
        <img src="{{ portfolio.featured_image | file_url }}" alt="{{ portfolio.title.value }}" width="100%" height="100%">
        <h3>{{ portfolio.title.value }}</h3>
        <p>Client: {{ portfolio.clint_name.value }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Portfolio Section",
  "settings": [
    {
      "type": "metaobject_list",
      "label": "Select Portfolio Items",
      "id": "portfolio_selector",
      "metaobject_type": "portfolio"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
